<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table"
    android:orientation="vertical"
    tools:context=".GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="NestedWeights" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="1dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dealer_card4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/contentDescription_ai_card4"
            android:padding="3dp"
            tools:ignore="NestedWeights"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/dealer_card2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/contentDescription_ai_card2"
            android:padding="3dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/dealer_card1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/contentDescription_ai_card1"
            android:padding="3dp"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/dealer_card3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/contentDescription_ai_card3"
            android:padding="3dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/dealer_card5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/contentDescription_ai_card5"
            android:padding="3dp"
            tools:srcCompat="@tools:sample/avatars" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="1dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/player_card4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/contentDescription_user_card4"
            android:padding="3dp"
            tools:ignore="NestedWeights,ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/player_card2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/contentDescription_ai_card2"
            android:padding="3dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/player_card1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/contentDescription_user_card1"
            android:padding="3dp"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/player_card3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/contentDescription_ai_card3"
            android:padding="3dp"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/player_card5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/contentDescription_user_card5"
            android:padding="3dp"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dealer_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dealPoint"
                android:textColor="#F0F4C3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/userPoint"
                android:textColor="#F0F4C3"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bet"
                android:textColor="#F0F4C3" />

            <TextView
                android:id="@+id/username_ingame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/player"
                android:textColor="#F0F4C3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/balance_ingame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Balance"
                android:textColor="#F0F4C3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Score"
                android:textColor="#F0F4C3"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:ignore="NestedWeights">

            <Button
                android:background="@drawable/round_button"
                android:id="@+id/coin_10"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:soundEffectsEnabled="false"
                android:text="@string/coin_10"
                android:textColor="#424242"
                app:backgroundTint="#FF9800"
                tools:ignore="TouchTargetSizeCheck"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:background="@drawable/round_button"
                android:id="@+id/coin_20"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:soundEffectsEnabled="false"
                android:text="@string/coin_20"
                android:textColor="#424242"
                app:backgroundTint="#FF9800"
                tools:ignore="TouchTargetSizeCheck"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/coin_50"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/round_button"
                android:soundEffectsEnabled="false"
                android:text="@string/coin_50"
                android:textColor="#424242"
                app:backgroundTint="#FF9800"
                tools:ignore="TouchTargetSizeCheck"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/coin_100"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:soundEffectsEnabled="false"
                android:text="@string/coin_100"
                android:textColor="#424242"
                app:backgroundTint="#FF9800"
                tools:ignore="NestedWeights,TouchTargetSizeCheck"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/round_button2"
                android:text="@string/btn_clear"
                android:textColor="#212121"
                app:backgroundTint="#FF5722"
                tools:ignore="TouchTargetSizeCheck"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_deal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_button1"
                android:clickable="false"
                android:text="@string/btn_deal"
                android:textColor="@color/black"
                app:backgroundTint="#03A9F4"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btn_hit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_button1"
                android:minHeight="48dp"
                android:text="@string/btn_hit"
                android:textColor="@color/black"
                app:backgroundTint="#03A9F4"
                tools:ignore="TouchTargetSizeCheck"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btn_stand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_button1"
                android:minHeight="48dp"
                android:text="@string/btn_stand"
                android:textColor="@color/black"
                app:backgroundTint="#03A9F4"
                tools:ignore="TouchTargetSizeCheck"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btn_double"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_button1"
                android:minHeight="48dp"
                android:text="@string/btn_double"
                android:textColor="@color/black"
                app:backgroundTint="#03A9F4"
                tools:ignore="TouchTargetSizeCheck"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btn_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_button1"
                android:text="@string/btn_ranking"
                android:textColor="#4A148C"
                app:backgroundTint="#03A9F4"
                tools:ignore="TouchTargetSizeCheck"
                style="?android:attr/buttonBarButtonStyle" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>